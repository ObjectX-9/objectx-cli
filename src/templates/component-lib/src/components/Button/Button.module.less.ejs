.button {
  border: none;
  border-radius: 4px;
  cursor: pointer;
  font-weight: 500;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  transition: background-color 0.2s, color 0.2s, border-color 0.2s, box-shadow 0.2s;
  
  &:disabled {
    cursor: not-allowed;
    opacity: 0.6;
  }
  
  /* 按钮类型 */
  &-primary {
    background-color: #1677ff;
    color: white;
    
    &:hover:not(:disabled) {
      background-color: #4096ff;
    }
  }
  
  &-secondary {
    background-color: #ffffff;
    border: 1px solid #d9d9d9;
    color: rgba(0, 0, 0, 0.88);
    
    &:hover:not(:disabled) {
      color: #4096ff;
      border-color: #4096ff;
    }
  }
  
  &-danger {
    background-color: #ff4d4f;
    color: white;
    
    &:hover:not(:disabled) {
      background-color: #ff7875;
    }
  }
}

/* 按钮大小 */
.size {
  &-small {
    padding: 0 7px;
    font-size: 14px;
    height: 24px;
  }
  
  &-medium {
    padding: 4px 15px;
    font-size: 14px;
    height: 32px;
  }
  
  &-large {
    padding: 6px 15px;
    font-size: 16px;
    height: 40px;
  }
} 